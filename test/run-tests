#!/usr/bin/env emacs --script

(let ((current-directory (file-name-directory load-file-name)))
  (setq projectile-drupal-test-path (expand-file-name "." current-directory))
  (setq projectile-drupal-root-path (expand-file-name ".." current-directory)))

(add-to-list 'load-path projectile-drupal-root-path)
(add-to-list 'load-path projectile-drupal-test-path)

(require 'projectile-drupal)
(require 'ert-expectations)

(dolist (test-file (or argv (directory-files projectile-drupal-test-path t "-test.el$")))
  (load test-file nil t))

(ert-run-tests-batch-and-exit t)
